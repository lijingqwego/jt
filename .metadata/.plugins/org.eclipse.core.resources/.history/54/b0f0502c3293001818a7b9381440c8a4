package com.jt.web.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.alibaba.fastjson.JSON;
import com.alibaba.fastjson.JSONObject;
import com.jt.common.service.HttpClientService;
import com.jt.common.util.GsonUtil;
import com.jt.web.pojo.Item;

@Service
public class ItemService {
	@Autowired
	private HttpClientService httpClientService;
	
	public Item getItemById(Long itemId) throws Exception{
		///query/item/desc/{itemId}
		String url = "http://localhost:8080/item/items/"+itemId;
		
		String jsonData = httpClientService.doGet(url, "utf-8");
		
		JSONObject parseObject = JSON.parseObject(jsonData);
		JSONObject jsonObject = parseObject.getJSONObject("data");
		Item item = GsonUtil.GsonToBean(jsonObject.toJSONString(), Item.class);
		return item;
	}
}
